<Application x:Class="SimpleHardwareMonitorGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleHardwareMonitorGUI"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="pack://application:,,,/GrayThemeUI;component/Theme/Light.xaml"/>-->
                <ResourceDictionary Source="pack://application:,,,/GrayThemeUI;component/Theme/Dark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/GrayThemeUI;component/Main.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            <sys:Double x:Key="WindowWidth">800.0</sys:Double>
            <sys:Double x:Key="WindowHeaderHeight">50.0</sys:Double>
            
            
            <!--Header(1) Dashboard(1) DashboardSpace(1)-->
            <sys:Double x:Key="WindowHeight">135.0</sys:Double> 
            <sys:Double x:Key="DashboardSpaceHeight">5.0</sys:Double>
            <sys:Double x:Key="DashboardHeight">80.0</sys:Double>


            
        </ResourceDictionary>

    </Application.Resources>
</Application>
